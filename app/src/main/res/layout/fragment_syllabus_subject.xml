<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical"
    tools:context="com.learnera.app.fragments.SyllabusSubjectFragment">

    <LinearLayout
        android:id="@+id/linear_layout_syllabus_subject_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Spinner
            android:id="@+id/syllabus_semester_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:id="@+id/divider_attendance_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/linear_layout_syllabus_subject_header"
        android:background="@drawable/border" />

    <ListView
        android:id="@+id/syllabusSubjectsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_attendance_2"
        android:scrollbars="none" />
</RelativeLayout>